		cp -r $(Q)$(TEST_RESROOT)$(D)FrameworkBenchmarks$(D)results$(Q) $(Q)$(REPORTDIR)$(Q); \
		$(TEST_STATUS)</command>
		<levels>
			<level>sanity</level>
		</levels>
		<groups>
			<group>perf</group>
		</groups>
	</test>
	<test>
		<testCaseName>tfb-jetty</testCaseName>
		<command>bash $(Q)$(TEST_RESROOT)$(D)FrameworkBenchmarks/tfb$(Q) --test jetty $(EXTRA_DOCKER_ARGS); \
		cp -r $(Q)$(TEST_RESROOT)$(D)FrameworkBenchmarks$(D)results$(Q) $(Q)$(REPORTDIR)$(Q); \
		$(TEST_STATUS)</command>
		<levels>
			<level>extended</level>
		</levels>
		<groups>
			<group>perf</group>
		</groups>
	</test>
</playlist>

