<playlist
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../TKG/playlist.xsd">
	<include>../perf.mk</include>
	<test>
		<testCaseName>tfb-spring-verify</testCaseName>
		<command>bash $(Q)$(TEST_RESROOT)$(D)FrameworkBenchmarks/tfb$(Q) --mode verify --test spring $(EXTRA_DOCKER_ARGS); \
		cp -r $(Q)$(TEST_RESROOT)$(D)FrameworkBenchmarks$(D)results$(Q) $(Q)$(REPORTDIR)$(Q); \
		$(TEST_STATUS)</command>
		<levels>
			<level>sanity</level>
		</levels>
		<groups>
			<group>perf</group>
		</groups>
	</test>
	<test>
		<testCaseName>tfb-spring</testCaseName>
		<command>bash $(Q)$(TEST_RESROOT)$(D)FrameworkBenchmarks/tfb$(Q) --test spring $(EXTRA_DOCKER_ARGS); \
		cp -r $(Q)$(TEST_RESROOT)$(D)FrameworkBenchmarks$(D)results$(Q) $(Q)$(REPORTDIR)$(Q); \
		$(TEST_STATUS)</command>
		<levels>
			<level>extended</level>
		</levels>
		<groups>
			<group>perf</group>
		</groups>
	</test>
	<test>
		<testCaseName>tfb-jetty-verify</testCaseName>
